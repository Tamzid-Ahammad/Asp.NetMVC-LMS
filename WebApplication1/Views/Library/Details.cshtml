                    </td>
                    <td>
                        @Html.DisplayFor(model => model.BookInformation[i].AuthorName, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BookInformation[i].AuthorName, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.BookInformation[i].BookExistingArea, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BookInformation[i].BookExistingArea, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        @Html.DisplayFor(model => model.BookInformation[i].BookBorrowingPrice, new { htmlAttributes = new { @class = "form-control", placeholder = "enter result..." } })
                        @Html.ValidationMessageFor(model => model.BookInformation[i].BookBorrowingPrice, "", new { @class = "text-danger" })
                    </td>
                </tr>




            }


        </tbody>
    </table>
</div>
