@model WebApplication1.Models.LibraryMangementSystem

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <h4>LibraryMangementSystem</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.StudentName, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.StudentName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StudentName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StudentEmail, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.StudentEmail, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StudentEmail, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.StudentAddress, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.StudentAddress, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.StudentAddress, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.DaysforBookBorrowed, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.DaysforBookBorrowed, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.DaysforBookBorrowed, "", new { @class = "text-danger" })
        </div>
    </div>
    <table>
        <thead>
            <tr>
                <th>Book Name</th>
                <th>Author Name</th>
                <th>Book Existing Area</th>
                <th>Book Borrowing Price</th>
            </tr>
        </thead>
        <tbody>




            @for (int i = 0; i < Model.BookInformation.Count; i++)
            {


                <tr>
                    <td>
                        @Html.EditorFor(model => model.BookInformation[i].BookName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Book Name..." } })
                        @Html.ValidationMessageFor(model => model.BookInformation[i].BookName, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.BookInformation[i].AuthorName, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Author Name..." } })
                        @Html.ValidationMessageFor(model => model.BookInformation[i].AuthorName, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.BookInformation[i].BookExistingArea, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Author Name..." } })
                        @Html.ValidationMessageFor(model => model.BookInformation[i].BookExistingArea, "", new { @class = "text-danger" })
                    </td>
                    <td>
                        @Html.EditorFor(model => model.BookInformation[i].BookBorrowingPrice, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Book Borrowing price..." } })
                        @Html.ValidationMessageFor(model => model.BookInformation[i].BookBorrowingPrice, "", new { @class = "text-danger" })
                    </td>
                </tr>




            }


        </tbody>
    </table>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
